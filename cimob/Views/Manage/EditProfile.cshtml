@model cimob.Models.ManageViewModels.EditProfileViewModel

@{
    ViewData["Title"] = "Editar Perfil";
    Layout = "/Views/Shared/_LayoutWhite.cshtml";
}
<!--TODO: FAZER CSS-->
<form asp-action="EditProfile">
    <div class="header">
        <img src="~/images/home/1.svg">
        <img src="~/images/home/2.svg">
        <img src="~/images/home/3.svg">
        <img src="~/images/home/4.svg">
        <img src="~/images/home/5.svg">
        <img src="~/images/home/6.svg">
        <img src="~/images/home/7.svg">
        <img src="~/images/home/8.svg">
        <img src="~/images/home/9.svg">
    </div>
    
    <div class="row form-group has-feedback has-feedback-left">
        <div class="col-md-12">
            <div class="col-md-4 col-md-offset-1">
                <label asp-for="Numero" class="control-label"></label>
            </div>
            <div class="col-md-2">
                <input asp-for="Numero" class="form-control" disabled="disabled" readonly />
            </div>
            <div class="col-md-6 cold-md-offset-5">
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row form-group has-feedback has-feedback-left">
        <div class="col-md-12">
            <div class="col-md-4 col-md-offset-1">
                <label asp-for="Nome" class="control-label"></label>
            </div>
            <div class="col-md-2">
                <input asp-for="Nome" class="form-control" disabled="disabled" readonly />
            </div>
            <div class="col-md-6 cold-md-offset-5">
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row form-group has-feedback has-feedback-left">
        <div class="col-md-12">
            <div class="col-md-4 col-md-offset-1">
                <label asp-for="Email" class="control-label"></label>
            </div>
            <div class="col-md-2">
                <input asp-for="Email" class="form-control" disabled="disabled" readonly />
            </div>
            <div class="col-md-6 cold-md-offset-5">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
    </div>



    <div class="row form-group has-feedback has-feedback-left">
        <div class="col-md-12">
            <div class="col-md-4 col-md-offset-1">
                <label asp-for="OldPassword" class="control-label"></label>
            </div>
            <div class="col-md-2">
                <input asp-for="OldPassword" class="form-control" />
            </div>
            <div class="col-md-6 cold-md-offset-5">
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row form-group has-feedback has-feedback-left">
        <div class="col-md-12">
            <div class="col-md-4 col-md-offset-1">

                <label asp-for="NewPassword" class="control-label"></label>
            </div>
            <div class="col-md-2">
                <input asp-for="NewPassword" class="form-control" />

            </div>
            <div class="col-md-6 cold-md-offset-5">
                <span asp-validation-for="NewPassword" class="text-danger"></span>

            </div>
        </div>
    </div>
    <div class="row form-group has-feedback has-feedback-left">
        <div class="col-md-12">
            <div class="col-md-4 col-md-offset-1">
                <label asp-for="ConfirmPassword" class="control-label"></label>
            </div>
            <div class="col-md-2">
                <input asp-for="ConfirmPassword" class="form-control" />
            </div>
            <div class="col-md-6 cold-md-offset-5">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
    </div>

    <button id="btnSubmit" type="submit" class="button btn btn-default">Submeter</button>

    <!--Vai para a pagina da area pessoal-->
    <a class="back-button" asp-controller="Manage" asp-action="Profile">Voltar</a>

</form>

