
@{
    ViewData["Title"] = "Área Pessoal";
    Layout = "~/Views/Shared/_LayoutWhite.cshtml";
}

<!--Alert da alteração da password-->
@if (ViewBag.ShowAlert)
{
    <div class="alert alert-success alert-dismissable fade in" style="margin: 0 21% 0 21%">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        A sua palavra passe foi alterada com sucesso !
    </div>
}
<div class="header">
    <img src="~/images/home/1.svg">
    <img src="~/images/home/2.svg">
    <img src="~/images/home/3.svg">
    <img src="~/images/home/4.svg">
    <img src="~/images/home/5.svg">
    <img src="~/images/home/6.svg">
    <img src="~/images/home/7.svg">
    <img src="~/images/home/8.svg">
    <img src="~/images/home/9.svg">
</div>


@if (ViewBag.CandidaturaSubmetida != null)
{
<div class="button-wrapper">
    <!--TODO: METER A IR PARA AS PÁGINAS CERTAS -->
    <a href="#" class="button">Estado da Candidatura</a>
    <a href="#" class="button">Documentos da Candidatura</a>
</div>

}
else
{
    <!--Caso não esteja candidatado-->
    <div class="button-wrapper">
        <!--Vai para a página com a tabela de editais-->
        <a href="#" class="button">Editais</a>
        <!--Vai para a página da candidatura-->
        <a asp-controller="ProgramasMobilidade" asp-action="Index" class="button">Candidaturas</a>
    </div>
}
