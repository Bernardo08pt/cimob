@model RegisterViewModel
@{
    ViewData["Title"] = "Registar";
}
<div class="row register-form">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group has-feedback has-feedback-left">
                <label asp-for="Numero"></label>
                <div class="input-group">
                    <input asp-for="Numero" class="form-control" />
                    <i class="glyphicon glyphicon-user form-control-feedback"></i>
                    <div class="input-group-btn">
                        <button class="btn bottom-right pop" type="button">
                            <span class="glyphicon glyphicon-question-sign"></span>
                        </button>
                    </div>
                </div>
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group has-feedback has-feedback-left">
                <label asp-for="Nome"></label>
                <div class="input-group">
                    <input asp-for="Nome" class="form-control" />
                    <i class="glyphicon glyphicon-user form-control-feedback"></i>
                    <div class="input-group-btn">
                        <button class="btn bottom-right pop" type="button">
                            <span class="glyphicon glyphicon-question-sign"></span>
                        </button>
                    </div>
                </div>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group has-feedback has-feedback-left">
                <label asp-for="DataNascimento"></label>
                <div class="input-group">
                    <input asp-for="DataNascimento" class="form-control" />
                    <i class="glyphicon glyphicon-envelope form-control-feedback"></i>
                    <div class="input-group-btn">
                        <button class="btn bottom-right pop" type="button">
                            <span class="glyphicon glyphicon-question-sign"></span>
                        </button>
                    </div>
                </div>
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group has-feedback has-feedback-left">
                <label asp-for="Email"></label>
                <div class="input-group">
                    <input asp-for="Email" class="form-control" placeholder="example@example.com" />
                    <i class="glyphicon glyphicon-envelope form-control-feedback"></i>
                    <div class="input-group-btn">
                        <button class="btn bottom-right pop" type="button">
                            <span class="glyphicon glyphicon-question-sign"></span>
                        </button>
                    </div>
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group has-feedback has-feedback-left">
                <label asp-for="Password"></label>
                <div class="input-group">
                    <input asp-for="Password" class="form-control" />
                    <i class="glyphicon glyphicon-lock form-control-feedback"></i>
                    <div class="input-group-btn">
                        <button class="btn bottom-right pop" type="button">
                            <span class="glyphicon glyphicon-question-sign"></span>
                        </button>
                    </div>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group  has-feedback has-feedback-left">
                <label asp-for="ConfirmPassword"></label>
                <div class="input-group">
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <i class="glyphicon glyphicon-lock form-control-feedback"></i>
                    <div class="input-group-btn">
                        <button class="btn bottom-right pop" type="button">
                            <span class="glyphicon glyphicon-question-sign"></span>
                        </button>
                    </div>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="button btn btn-default">Registar</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}