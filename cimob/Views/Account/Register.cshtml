@model RegisterViewModel
@{
    ViewData["Title"] = "Registar";
}
<div class="row register-form">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <div class="form-group has-feedback has-feedback-left">
                <input asp-for="Numero" class="form-control" placeholder="Número" />
                <i class="glyphicon glyphicon-user form-control-feedback"></i>
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group has-feedback has-feedback-left">
                <input asp-for="Nome" class="form-control" placeholder="Nome" />
                <i class="glyphicon glyphicon-user form-control-feedback"></i>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group has-feedback has-feedback-left">
                <input asp-for="DataNascimento" class="form-control" placeholder="Data de Nascimento" />
                <i class="glyphicon glyphicon-envelope form-control-feedback"></i>
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group has-feedback has-feedback-left">
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <i class="glyphicon glyphicon-envelope form-control-feedback"></i>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group  has-feedback has-feedback-left">
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirmar Password" />
                <i class="glyphicon glyphicon-lock form-control-feedback"></i>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="button btn btn-default">Registar</button>
        </form>
    </div>

</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}