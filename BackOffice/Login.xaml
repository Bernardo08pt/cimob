<Window x:Class="BackOffice.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BackOffice"
        mc:Ignorable="d"
        Title="Login" Height="350" Width="300" Icon="favicon.ico">
    <Grid Name="GridFormUtilizador" DockPanel.Dock="Left"  Margin="10">
            <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

        <Image Grid.Row="0" Grid.Column="0"  Source="/images/logotipo.png" HorizontalAlignment="Center"/>
        <Label Content="Nome de Utilizador" HorizontalAlignment="Left" FontSize="12" Grid.Row="1" Grid.Column="0" />
            <TextBox Name="TextBoxEmail" Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" FontSize="12" Margin="5, 0" Padding="5" />

            <Label Content="Password" HorizontalAlignment="Left" FontSize="12" Grid.Row="3" Margin="0,10,0,0" />
            <PasswordBox Name="TextBoxPassword" Grid.Row="4" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" Margin="5, 0" Padding="5"/>


            <StackPanel Grid.Column="1" Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="25">
                <Button x:Name="OkButton"  IsDefault="True" MinWidth="60" Content="Entrar" Click="OkButton_Click"/>
            </StackPanel>
        </Grid>
</Window>
